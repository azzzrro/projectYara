                    </a>
                </div>
                <div class="header-center">
                    <nav class="main-nav">
                        <ul class="menu sf-arrows">
                            <li class="megamenu-container active">
                                <a href="/home" class="">Home</a>
                            </li>
                            {{#each categoryData}}
                            <li>
                                <a href="/products?id={{this._id}}" class="">{{this.category}}</a>
                            </li>
                            {{/each}}
                            {{#if userData}}
