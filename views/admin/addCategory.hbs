    <div class="container" id="addCategory">
		<h1>Add New Category</h1>
        <h5 style="margin-left: 1rem; color: #4CAF50;">{{catSave}}</h5>
        <h5 style="margin-left: 1rem; color: red;">{{catExist}}</h5>
		<form action="/admin/addCategory" method="post" id="categoryValidate" enctype="multipart/form-data">

			<input type="text" placeholder="Enter the category name" id="name" name="name">

            <input type="text" placeholder="Category description" id="categoryDescription" name="categoryDescription">


			<label for="image">Category Image :</label>
			<input type="file" id="image" name="image" accept="image/*" required>

			<img id="preview" src="#" alt="Image Preview" style="display: none;">

			<input type="submit" value="Add Category">
		</form>
	</div>








</div>


<script>
    const inputImage = document.getElementById('image');
    const imgPreview = document.getElementById('preview');

    inputImage.addEventListener('change', function() {
        const file = this.files[0];

        if (file) {
            const reader = new FileReader();

            reader.addEventListener('load', function() {
                imgPreview.setAttribute('src', this.result);
                imgPreview.style.display = 'block';
            });

            reader.readAsDataURL(file);
        }
    });
</script>



