                                    <div class="input-group  input-spinner">
                                                
                                                <div class="input-group-prepend">
                                                    <button onclick="productQuantity('{{productData._id}}','dec')" style="min-width: 26px" class="btn btn-decrement btn-spinner" type="button">
                                                        <i  class="icon-minus"></i>
                                                    </button>
                                                </div>
                                                
                                                <input disabled type="number" id="{{productData._id}}" style="text-align: center;" class="form-control" name="num-product" value="1">


                                                <div class="input-group-append">
                                                    <button onclick="productQuantity('{{productData._id}}','inc')" style="min-width: 26px" class="btn btn-increment btn-spinner" type="button">
                                                        <i class="icon-plus"></i>
                                                    </button>
                                                </div>
                                            
                                    </div>
                                
                                
                                </div><!-- End .product-details-quantity -->
                            </div><!-- End .details-filter-row -->


                            <div class="product-details-action">
                                {{#if productData.stock}}
                                {{#if userData}}
                                {{#if productData.isOnCart}}

                                <a href="/cart?id={{userData._id}}" class="btn-product btn-cart"><span>Go to
                                        cart</span></a>

                                {{else}}


                                <span id="addToCartBtn">

                                    <button  onclick="addToCart('{{productData._id}}')" 
                                    class="btn-product btn-cart"><span>Add to cart</span></button>


                                </span>

                                
                                {{/if}}

                                {{else}}

                                <a href="/login" class="btn-product btn-cart"><span>Add to cart</span></a>

                                {{/if}}
                                {{else}}


                                <button disabled="disabled" class="btn-product btn-cart"><span>Out of
                                        stock</span></button>

                                {{/if}}


                                <div class="details-action-wrapper">
                                    <div onclick="addToWishlist('{{productData._id}}','{{cartId}}')" style="cursor: pointer;" class="btn-product btn-wishlist" title="Wishlist"><span>Add to
                                            Wishlist</span></div>

                                </div><!-- End .details-action-wrapper -->
                            </div><!-- End .product-details-action -->


                            <div class="product-details-footer">

                                <div class="social-icons social-icons-sm">
                                    <span class="social-label">Share:</span>
                                    <a href="#" class="social-icon" title="Facebook" target="_blank"><i
                                            class="icon-facebook-f"></i></a>
                                    <a href="#" class="social-icon" title="Twitter" target="_blank"><i
                                            class="icon-twitter"></i></a>
                                    <a href="#" class="social-icon" title="Instagram" target="_blank"><i
                                            class="icon-instagram"></i></a>
                                    <a href="#" class="social-icon" title="Pinterest" target="_blank"><i
                                            class="icon-pinterest"></i></a>
                                </div>

                            </div>

                        </div><!-- End .product-details -->
                    </div><!-- End .col-md-6 -->
                </div><!-- End .row -->
            </div><!-- End .product-details-top -->




