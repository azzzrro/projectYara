{{>productheader}}


<main class="main">


    <div class="page-header text-center" style="background-image: url('assets/images/page-header-bg.jpg')">
        <div class="container">
            <h1 class="page-title">Shop products</h1>
        </div><!-- End .container -->
    </div><!-- End .page-header -->


    <nav aria-label="breadcrumb" class="breadcrumb-nav mb-2">
        <div class="container">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="index.html">Home</a></li>
                <li class="breadcrumb-item"><a href="#">Shop</a></li>

                <li class="breadcrumb-item active" aria-current="page">{{productData.name}}</li>

            </ol>
        </div><!-- End .container -->
    </nav><!-- End .breadcrumb-nav -->


    <div class="page-content">
        <div class="container">
            <div class="product-details-top">
                <div class="row">


                    <div class="col-md-6">
                        <div class="product-gallery product-gallery-vertical">
                            <div class="row">
                                <figure class="product-main-image">
                                    {{#if (eq productData.stock 0)}}
                                    <span class="product-label label-out">Out of Stock</span>
                                    {{/if}}
                                    <img id="product-zoom" src="/uploads/{{productData.imageUrl.[0]}}"
                                        data-zoom-image="/uploads/{{productData.imageUrl.[0]}}" alt="product image">

                                    <a href="#" id="btn-product-gallery" class="btn-product-gallery">
                                        <i class="icon-arrows"></i>
                                    </a>
                                </figure><!-- End .product-main-image -->

                                <div id="product-zoom-gallery" class="product-image-gallery">
                                    <a class="product-gallery-item active" href="#"
                                        data-image="/uploads/{{productData.imageUrl.[0]}}"
                                        data-zoom-image="/uploads/{{productData.imageUrl.[0]}}">
                                        <img src="/uploads/{{productData.imageUrl.[0]}}" alt="product">
                                    </a>

                                    <a class="product-gallery-item" href="#"
                                        data-image="/uploads/{{productData.imageUrl.[1]}}"
                                        data-zoom-image="/uploads/{{productData.imageUrl.[1]}}">
                                        <img src="/uploads/{{productData.imageUrl.[1]}}" alt="product">
                                    </a>

                                    <a class="product-gallery-item" href="#"
                                        data-image="/uploads/{{productData.imageUrl.[2]}}"
                                        data-zoom-image="/uploads/{{productData.imageUrl.[2]}}">
                                        <img src="/uploads/{{productData.imageUrl.[2]}}" alt="product">
                                    </a>

                                    <a class="product-gallery-item" href="#"
                                        data-image="/uploads/{{productData.imageUrl.[3]}}"
                                        data-zoom-image="/uploads/{{productData.imageUrl.[3]}}">
                                        <img src="/uploads/{{productData.imageUrl.[3]}}" alt="product">
                                    </a>
                                </div><!-- End .product-image-gallery -->
                            </div><!-- End .row -->
                        </div><!-- End .product-gallery -->
                    </div><!-- End .col-md-6 -->


                    <div class="col-md-6">
                        <div class="product-details">
                            <h1 class="product-title">{{productData.name}}</h1>
                            <input name="productName" value="{{productData.name}}" type="hidden">
                            <!-- End .product-title -->

                            <div class="ratings-container">
                                <div class="ratings">
                                    <div class="ratings-val" style="width: 80%;"></div><!-- End .ratings-val -->
                                </div><!-- End .ratings -->
                                <a class="ratings-text" href="#product-review-link" id="review-link">( 2 Reviews )</a>
                            </div><!-- End .rating-container -->

                            <div class="product-price">
                                â‚¹ {{productData.price}}
                            </div><!-- End .product-price -->

