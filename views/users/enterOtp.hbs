{{>otpHeader}}

<!-- Preloader -->
<div class="spinner-wrapper">
        <div class="spinner">
            <div class="bounce1"></div>
            <div class="bounce2"></div>
            <div class="bounce3"></div>
        </div>
    </div> 
<!-- end of preloader -->


<div class="container-fluid">
    <div class="container">
        <div class="d-flex wrapper justify-content-center">

            <div class="row w-100">
                <div class="col-md-6 otpPageImage">

                </div>

                <div class="col-md-6 col-lg-6 col-12">

                    <div class="otpPage">
                        <h1>Verify email</h1>
                        <p>Please enter the one-time password<br>sent to your email</p>
                        <form action="/otpEnter" method="post" id="otpEnter">
                            <input type="number" placeholder="Enter OTP here" id="otp" name="otp" />
                            <div class="recover">
                                <a href="#">Resend OTP</a>
                            </div>
                            <p id="fillout2">Please enter the valid OTP</p>

                            <div class="logout_alert" role="alert">

                            </div>
                            <div class="invalid_alert" role="alert">
                                    {{invalidOtp}}
                            </div>

                            <button type="submit" id="auth_button">Verify</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>




