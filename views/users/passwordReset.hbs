{{>otpHeader}}

<!-- Preloader -->
<div class="spinner-wrapper">
        <div class="spinner">
            <div class="bounce1"></div>
            <div class="bounce2"></div>
            <div class="bounce3"></div>
        </div>
    </div> 
<!-- end of preloader -->


<div class="container-fluid">
    <div class="container">
        <div class="d-flex wrapper justify-content-center">

            <div class="row w-100">
                <div class="col-md-6 otpPageImage">

                </div>

                <div class="col-md-6 col-lg-6 col-12">

                    <div class="otpPage">
                        <h1>Enter new password</h1>

                        <form action="/newPassword" method="post" id="newPass">
                            <input type="password" placeholder="Enter passoword" id="password" name="password"/>
                            <input type="password" placeholder="Confirm passoword" id="new_password" name="new_password"/>

                            <div class="recover">
                                <a href="/login">Remember passoword?</a>
                            </div>
                            
                            <p id="notmatch">Password does not match</p>
                            <p id="fillout2">Please enter the valid OTP</p>

                            <div class="logout_alert" role="alert">

                            </div>
                            <div class="invalid_alert" role="alert">
                                    {{invalidOtp}}
                            </div>

                            <button type="submit" id="auth_button">Verify</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>




{{>signupfooter}}