{{>signupheader}}

<!-- Preloader -->
<div class="spinner-wrapper">
        <div class="spinner">
            <div class="bounce1"></div>
            <div class="bounce2"></div>
            <div class="bounce3"></div>
        </div>
    </div> 
<!-- end of preloader -->


<div class="container-fluid">
    <div class="container">
        <div class="d-flex wrapper justify-content-center">

            <div class="row w-100">
                <div class="col-md-6 otpPageImage">

                </div>

                <div class="col-md-6">

                    <div class="otpPage">
                        <h1>Verify email</h1>
                        <p>Please enter your registered email</p>
                        <form action="/verifyEmail" method="post" id="emailEnter">
                            <input type="email" placeholder="Enter email" id="verify_email" name="email" />
                            <div class="recover">
                                <a href="/login">Remember password?</a>
                            </div>
                            <p id="fillout2">Please enter your email</p>

                            <div class="logout_alert" role="alert">

                            </div>
                            {{#if emailNotExist}}
                            <div class="invalid_alert" role="alert">

                                {{emailNotExist}}
                            </div>
                            {{/if}}
                            <button type="submit" id="auth_button">Verify</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>




{{>signupfooter}}